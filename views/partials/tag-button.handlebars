{{#if total}}
    <a href="{{href}}" class="btn btn-secondary position-relative tag counter"
        role="button">
        <i class="fa-solid fa-{{icon}}"></i> {{name}}:{{value}}
        <span
            class="badge position-absolute top-0 start-100 translate-middle text-bg-success">{{total}}</span>
    </a>
{{else}}
    <a href="{{href}}" class="btn btn-secondary tag" role="button">
        <i class="fa-solid fa-{{icon}}"></i> {{name}}:{{value}}
    </a>
{{/if}}